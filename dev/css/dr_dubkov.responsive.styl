@media screen and (max-width: 999px)
	.slider-arrow
		display none

	.slider-point
		display none

	.page-content
		position inherit
		height 100%
		min-height 100%
		max-height 100%
		overflow auto

	.main-slider-item
		height 100vh
		margin-bottom 50px

	.slider-text-container
		padding 50px
		.name
			max-width 195px
			margin 50px auto 20px auto
			svg
				display block
				width 100%
	.map
		width 100%
		height 100%

	.page-text
		h1
			font-size 26px
			line-height 36px

		h2
			padding-left 10px
			font-size 18px
			line-height 32px
		p
			margin-top 30px
			font-size 14px
			line-height 20px

	.location
		position relative
		font-size 18px
		line-height 28px

	.instagram
		position relative
		left 50%
		margin-left -63px
@media screen and (max-width: 830px)
	.page-inner
		flex-flow column

	.main-slider-item
		height auto

	.slider-text
		width 100%
		min-height 370px
		.name
			margin 20px auto 20px auto
	.slider-img
		width 100%
		min-height 600px

	.page-text
		h1
			font-size 22px
			line-height 26px

		h2
			padding-left 10px
			font-size 16px
			line-height 32px
		p
			margin-top 30px
			font-size 14px
			line-height 20px

	.map-container
		height 500px

@media screen and (max-width: 600px)
	.page-content
		padding 20px

	.main-slider-item
		margin-bottom 30px

@media screen and (max-width: 400px)
	.slider-text-container
		padding 20px

	.page-content
		padding 20px 0
